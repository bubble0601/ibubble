{
  "root": true,
  "env": {
    "node": true
  },
  "extends": [
    "plugin:vue/recommended",
    "@vue/standard"
  ],
    "parserOptions": {
    "parser": "babel-eslint"
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "comma-dangle": [
      "error",
      "only-multiline"
    ],
    "vue/html-closing-bracket-spacing": "off",
    "vue/max-attributes-per-line": "off"
  }
}
